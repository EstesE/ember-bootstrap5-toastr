{{page-title "Index"}}
<div class="row">
  <div class="col-sm-12">
    <h2>Index</h2>

    <button type="button" class="btn btn-outline-primary" {{on "click" this.test}}>Test <i class="bi-alarm"></i></button>

    <svg class="bi" width="32" height="32" fill="red">
      <use xlink:href="/assets/bootstrap/bootstrap-icons.svg#heart-fill"/>
    </svg>
    <svg class="bi" width="32" height="32" fill="currentColor">
      <use xlink:href="/assets/bootstrap/bootstrap-icons.svg#toggles"/>
    </svg>
    <svg class="bi" width="32" height="32" fill="currentColor">
      <use xlink:href="/assets/bootstrap/bootstrap-icons.svg#bootstrap"/>
    </svg>
    <svg class="bi" width="32" height="32" fill="currentColor">
      <use xlink:href="/assets/bootstrap/bootstrap-icons.svg#shop"/>
    </svg>

    <img src="/assets/bootstrap/bootstrap.svg" alt="Bootstrap" width="32" height="32">

    <i class="bi-alarm"></i>
    <i class="bi-bootstrap"></i>

    <i class="bi-alarm" style="font-size: 2rem; color: cornflowerblue;"></i>
    {{outlet}}
  </div>

  <div class="row mt-5">
    <div class="col-sm-12">
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-test-modal-launch>
        Launch demo modal
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-test-modal>
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" data-test-modal-body>
              xyz
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" data-test-modal-close>Close</button>
              <button type="button" class="btn btn-primary" data-test-modal-save>Save changes</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>